doctype html
mixin item(title, url)
  li(class='list-item')
    a(href=url class=`item ${path == url ? 'active' : ''}`)=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('Strona główna', '/') 
        +item('Dodaj produkt', '/addProduct') 
        +item('Złóż zamówienie', '/newOrder') 
        +item('Przegladaj zamówienia', '/orders') 

    block content